package com.bank;
//getting customer details
public class Customer {
	//fields
	int cid;
	String cname;
	String add;
	long mobileno;
	
	//methods
	void setCustomerDetails(int a,String b,String c,long d) {
		cid=a;
		cname=b;
		add=c;
		mobileno=d;
	}
	void getCustomerDetails()
	{
		System.out.println("cid is:"+cid);
		System.out.println("cname is:"+cname);
		System.out.println("Address is:"+add);
		System.out.println("Mobile number is:"+mobileno);
	}

	public static void main(String[] args) {
		
		//create object
		Customer c=new Customer();
		c.setCustomerDetails(1001, "meghana", "ong", 9078654378l);
		c.getCustomerDetails();	
	}
}
